{
  "name": "seig-tools",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "find . -name '*.js' -or -name '*.js.map' -type f | grep -v node_modules | xargs rm",
    "test": "nyc mocha --require espower-typescript/guess 'test/**/*.ts'",
    "git-change-files": "node app/git-change-files.js",
    "gitlab-comment": "node app/gitlab-comment.js",
    "gitlab-commit-status": "node app/gitlab-commit-status.js"
  },
  "devDependencies": {
    "@types/mocha": "5.0.0",
    "@types/node": "9.6.4",
    "@types/request-promise-native": "1.0.14",
    "espower-typescript": "8.1.3",
    "mocha": "5.1.0",
    "nyc": "^11.6.0",
    "power-assert": "1.5.0",
    "rewire": "4.0.0",
    "ts-mockito": "2.3.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
  },
  "dependencies": {
    "request": "2.85.0",
    "request-promise-native": "1.0.5"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "sourceMap": true
  }
}